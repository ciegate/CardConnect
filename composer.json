{
    "name": "ciegate/cardconnect",
    "description": "PHP adapter for CardConnect CardPointe API",
    "keywords": [
        "cardconnect",
        "cardpointe"
    ],
    "homepage": "https://github.com/ciegate/CardConnect",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Ciegate Technologies Global, Inc.",
            "email": "support@ciegate.com"
        },
        {
            "name": "Contributors",
            "homepage": "https://github.com/Ciegate/CardConnect/contributors"
        }
    ],
    "scripts": {
        "test": "phpunit",
        "lint": [
            "php-cs-fixer fix --config ./.php_cs"
        ]
    },
    "autoload": {
        "psr-4": {
            "Ciegate\\CardConnect\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ciegate\\CardConnect\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.3|^8.0",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^6.5|^7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^8.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
